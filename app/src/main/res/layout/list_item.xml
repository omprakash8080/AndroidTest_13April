<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:padding="5dp"
                android:id="@+id/container">

    <!--  ListRow Left sied Thumbnail image -->
    <LinearLayout android:id="@+id/list_title"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:padding="3dp"
                  android:layout_alignParentLeft="true"
                  android:layout_marginRight="5dp"
                  android:layout_centerInParent="true">

        <ImageView
                android:id="@+id/list_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@mipmap/ic_user_placeholder"/>

    </LinearLayout>

    <!-- Title Of Article-->
    <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/list_title"
            android:layout_toRightOf="@+id/list_title"
            android:text="This is the title"
            android:textSize="16dp"
            android:layout_marginRight="40dp"
            android:textStyle="normal"
            android:textColor="#343434"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingRight="5dp"


    />

    <!-- byline of Article -->
    <TextView
            android:id="@+id/list_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginTop="1dp"
            android:layout_marginRight="40dp"
            android:layout_toRightOf="@+id/list_title"
            android:textSize="15dp"
            android:padding="1dp"

            android:text="Just gona stand there and ..." />

    <!-- Rightend Duration -->

    <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:text="2017-06-06"
            android:textSize="14dp"
            android:layout_marginRight="40dp"
            android:layout_below="@+id/list_description"
          />

    <!-- Rightend Arrow -->
    <ImageView
               android:src="@mipmap/ic_forward"
               android:layout_width="30dp"
               android:layout_height="100dp"
               android:layout_alignParentRight="true"
               android:layout_centerVertical="true"/>

</RelativeLayout>