<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:padding="5dp"
                android:id="@+id/container"
                android:clickable="true">

    <!--  ListRow Left sied Thumbnail image -->
    <LinearLayout android:id="@+id/list_title"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding="3dp"
                  android:layout_alignParentLeft="true"
                  android:layout_marginRight="5dp"
                  android:layout_marginLeft="9dp"
                  android:layout_alignParentEnd="true"
                  android:layout_marginEnd="0dp">

        <ImageView
                android:id="@+id/list_image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@mipmap/ic_user_placeholder"
        />

        <!-- Title Of Article-->
        <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/list_title"
                android:layout_toRightOf="@+id/list_title"
                android:text="This is the title"
                android:textSize="16dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:textStyle="normal"
                android:textColor="#343434"
                android:paddingTop="2dp"
                android:paddingBottom="5dp"
                android:paddingRight="5dp"

        />

    </LinearLayout>


    <!-- byline of Article -->
    <TextView
            android:id="@+id/list_description"
            android:layout_width="406dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textSize="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_below="@+id/list_title"
            android:text="Just gona stand there and ..."
    />

    <!-- Rightend Duration -->
    <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:text="2017-06-06"
            android:textSize="16dp"
            android:layout_marginRight="30dp"
            android:layout_above="@+id/list_description"
            android:padding="5dp"
            />



</RelativeLayout>